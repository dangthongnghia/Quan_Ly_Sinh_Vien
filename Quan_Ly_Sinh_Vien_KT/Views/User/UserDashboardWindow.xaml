<!-- UserDashboardWindow.xaml -->
<Window x:Class="Quan_Ly_Sinh_Vien_KT.Views.User.UserDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quan_Ly_Sinh_Vien_KT"
        mc:Ignorable="d"
        Title="Hệ thống Sinh viên" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel>
            <!-- Left Navigation Panel -->
        <Border Grid.Column="0" Background="#3498DB">
            <StackPanel>
                <TextBlock Text="SINH VIÊN" Foreground="White" 
                           FontWeight="Bold" FontSize="18" Margin="15,20" 
                           TextAlignment="Center"/>

                <Separator Background="#2980B9" Margin="10,0"/>

                <TextBlock x:Name="lblStudentName" Text="Xin chào, Sinh viên" Foreground="White" 
                           Margin="15,10" TextAlignment="Center"/>

                <Separator Background="#2980B9" Margin="10,10"/>

                <!-- Navigation Menu -->
                <Button x:Name="btnProfile" Content="Thông tin cá nhân" 
                        Style="{StaticResource {x:Type Button}}"
                        Height="40" Margin="10,5" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="10,0" Click="btnProfile_Click"/>

                <Button x:Name="btnRegisterSubjects" Content="Đăng ký môn học" 
                        Style="{StaticResource {x:Type Button}}"
                        Height="40" Margin="10,5" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="10,0" Click="btnRegisterSubjects_Click"/>

                <Button x:Name="btnMySubjects" Content="Môn học đã đăng ký" 
                        Style="{StaticResource {x:Type Button}}"
                        Height="40" Margin="10,5" Background="Transparent" 
                        BorderThickness="0" Foreground="White"
                        HorizontalContentAlignment="Left" Padding="10,0" Click="btnMySubjects_Click"/>

                <Separator Background="#2980B9" Margin="10,10"/>

                <Button x:Name="btnLogout" Content="Đăng xuất" 
                        Style="{StaticResource {x:Type Button}}"
                        Height="40" Margin="10,5" Background="#E74C3C" 
                        BorderThickness="0" Foreground="White"
                        HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" x:Name="contentControl" Margin="10"/>
        </DockPanel>
    </Grid>
</Window>