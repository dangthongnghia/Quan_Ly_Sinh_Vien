<!-- StudentProfileView.xaml -->
<Window x:Class="Quan_Ly_Sinh_Vien_KT.Views.User.StudentProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quan_Ly_Sinh_Vien_KT"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="THÔNG TIN CÁ NHÂN" 
                   FontSize="20" FontWeight="Bold" Margin="0,10,0,20"/>

        <!-- Profile information -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5" Background="#F9F9F9">
                <StackPanel Margin="20">
                    <Ellipse Width="120" Height="120" HorizontalAlignment="Center" Margin="0,10,0,20">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/Images/student_avatar.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <TextBlock x:Name="lblFullStudentName" Text="Nguyễn Văn A" 
                               FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="lblStudentId" Text="Mã SV: SV001" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5">
                <StackPanel Margin="20">
                    <TextBlock Text="THÔNG TIN SINH VIÊN" FontWeight="Bold" 
                               Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Họ và tên:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtFullName" Margin="5" Padding="3"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ngày sinh:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpBirthday" Margin="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Địa chỉ email:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtEmail" Margin="5" Padding="3"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Số điện thoại:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtPhone" Margin="5" Padding="3"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Tỉnh/Thành phố:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cbProvince" Margin="5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Mật khẩu mới:" 
                                   FontWeight="SemiBold" Margin="5"/>
                        <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="txtNewPassword" Margin="5" Padding="3"/>

                        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="Cập nhật thông tin" 
                                x:Name="btnUpdateProfile" Height="35" Margin="5,20,5,5"
                                Background="#2196F3" Foreground="White"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>