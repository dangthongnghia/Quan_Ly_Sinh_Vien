<Window x:Class="Quan_Ly_Sinh_Vien_KT.Views.Admin.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quan_Ly_Sinh_Vien_KT.Views.Admin"
        mc:Ignorable="d"
        Title="Admin Main Window" Height="571" Width="874">
    <Grid>
        <DockPanel>
            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Background="#2D3E50">
                <StackPanel>
                    <TextBlock Text="QUẢN LÝ SINH VIÊN" Foreground="White" 
                   FontWeight="Bold" FontSize="18" Margin="15,20" 
                   TextAlignment="Center"/>

                    <Separator Background="#3E5166" Margin="10,0"/>

                    <TextBlock Text="Xin chào, Admin" Foreground="White" 
                   Margin="15,10" TextAlignment="Center"/>

                    <Separator Background="#3E5166" Margin="10,10"/>

                    <!-- Navigation Menu -->
                    <Button x:Name="btnStudents" Content="Quản lý Sinh Viên" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnStudents_Click"/>

                    <Button x:Name="btnUsers" Content="Quản lý Người Dùng" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnUsers_Click"/>

                    <Button x:Name="btnRoles" Content="Quản lý Vai Trò" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnRoles_Click"/>

                    <Button x:Name="btnUserRoles" Content="Phân Quyền Người Dùng" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnUserRoles_Click"/>

                    <Button x:Name="btnSubjects" Content="Quản lý Môn Học" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnSubjects_Click"/>

                    <Button x:Name="btnProvinces" Content="Quản lý Tỉnh/TP" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnProvinces_Click"/>

                    <Button x:Name="btnRegistrations" Content="Đăng ký Môn học" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="Transparent" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Left" Padding="10,0" Click="btnRegistrations_Click"/>

                    <Separator Background="#3E5166" Margin="10,10"/>

                    <Button x:Name="btnLogout" Content="Đăng xuất" 
                Style="{StaticResource {x:Type Button}}"
                Height="40" Margin="10,5" Background="#E74C3C" 
                BorderThickness="0" Foreground="White"
                HorizontalContentAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- Khu vực hiển thị nội dung -->
            <ContentControl x:Name="MainContent" Background="White"/>
        </DockPanel>
    </Grid>
</Window>
